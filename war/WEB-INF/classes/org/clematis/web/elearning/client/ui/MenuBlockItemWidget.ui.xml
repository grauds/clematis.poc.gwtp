<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.clematis.web.elearning.client.ui.MenuBlockItemWidget.MenuBlockItemStyle">
	    .group
	    {
		    margin: 15px;
		   	
		}
	   
	    .cell
	    {
	        margin-left: 10px;
	        width: 280px;
		}
		
		.link
		{
		    font-size: 18px;
		    color: #3671d1;	
		    margin: 3px;
		    border: 0px;
		    cursor: pointer;
	        cursor: hand;
	        text-decoration:none;
		}
		
		.link a:link 
		{
			color:#3671d1; 
			text-decoration:none;
	    }  
	
		.link a:visited 
		{
			color:#3671d1; 
			text-decoration:none;
	    }  
		
		.link a:hover 
		{
			color:#3671d1; 
			text-decoration:none;
	    }  
	
		.link a:active 
		{
			color:#3671d1; 
			text-decoration:none;
	    }  
	    
	</ui:style>
	
	<g:HorizontalPanel styleName="{style.group}">
         <g:Image ui:field="image" />
         <g:VerticalPanel styleName="{style.cell}" ui:field="panel">
            <!-- g:Hyperlink targetHistoryToken='income' styleName="{style.link}" text="Новая доходная операция"-->
         </g:VerticalPanel>
    </g:HorizontalPanel> 
    
</ui:UiBinder> 