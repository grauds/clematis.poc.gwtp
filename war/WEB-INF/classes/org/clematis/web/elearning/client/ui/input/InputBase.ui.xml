<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

   <ui:with field='style' type="org.clematis.web.elearning.client.ui.input.resources.InputResources" />
	
	<g:HTMLPanel styleName="{style.css.ib_hangbottom}">
	  <div class="{style.css.ib_container}">
	    <g:SimplePanel ui:field="captionHolder"><g:Label ui:field="caption" /></g:SimplePanel> 
	    <g:HTMLPanel ui:field="inputHolder" styleName="{style.css.ib_inputholder}">
	        <div class="{style.css.ib_label}"><g:Label styleName="{style.css.ib_label}" ui:field="label" /></div>
 
	    </g:HTMLPanel>
	    <div class="{style.css.ib_labelerror}" ><g:Label styleName="{style.css.ib_labelerror}" ui:field="labelError" />	</div>
	    <!-- div class="{style.css.ib_labelerror}" ><g:Label styleName="{style.css.ib_labelerror}" ui:field="labelRequired" />	</div-->
	    <g:SimplePanel styleName="{style.css.ib_pin}" ui:field="pin" />	    
	  </div>
	 </g:HTMLPanel> 	
		
</ui:UiBinder> 