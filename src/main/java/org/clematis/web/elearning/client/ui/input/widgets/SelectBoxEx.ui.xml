<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:org.clematis.web.elearning.client.ui.input.widgets">
	<ui:style>
	  
	   
	  .selectBoxEx {
			width: 100%;
			border: none;
			font-size: 100%;
			height: 27px;			
			padding-left: 5px;
			box-sizing: border-box;
	  }
	  
	  .selectBoxEx:focus, .selectBoxEx:focus{
		    outline: none;
		}
	  
	  
	  .selectBoxExButton {
			width: 27px;
			height: 27px;
			float: right;
			border: 0px;
			background: transparent none;
			padding: 0px;
			font-family: arial, helvetica, sans-serif;
			font-size: 14px;
			color: black;
	  }
	      
	</ui:style>
	
	<g:HorizontalPanel ui:field="holder" >
	
	   <g:cell width="100%">
		<g:TextBox ui:field="textBox" styleName="{style.selectBoxEx}"/>
	   </g:cell>
	   <g:cell width="32">		
		<m:ArrowButton ui:field="button" styleName="{style.selectBoxExButton}"/>
	   </g:cell>
	   	   		
	</g:HorizontalPanel>
	
</ui:UiBinder> 