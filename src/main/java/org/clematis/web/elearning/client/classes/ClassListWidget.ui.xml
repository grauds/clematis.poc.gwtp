<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.clematis.web.elearning.client.ui">
	
	<ui:style field="general" src="../general/general.css" />    
	<ui:with field='res' type='org.clematis.web.elearning.client.resources.Resources' />
	
	<ui:style type="org.clematis.web.elearning.client.classes.ClassListWidget.MyStyle">
		.module-number {
		    color: #CC7C0F;
		    display: inline;
		    float: left;
		    font-family: arial;
		    font-size: 22px;
		    line-height: 41px;
		    margin-right: 10px;
		}		
		
		.selected {
			background: none repeat scroll 0 0 #EEEEEE;
		    border: 1px solid #CCCCCC;
		    vertical-align: top;
	    }
	    
	    .unselected {
			background: none;
		    border: none;
		    vertical-align: top;
	    }
	</ui:style>
	
	<g:HorizontalPanel ui:field="holder">
	   <g:cell><w:PinWidget ui:field="pin" /></g:cell>
	   <g:cell>
			<g:Label ui:field="name" styleName="{style.module-number}" />
	   </g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 