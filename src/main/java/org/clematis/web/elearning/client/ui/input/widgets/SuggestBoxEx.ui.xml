<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:org.clematis.web.elearning.client.ui.input.widgets">
	<ui:style>
	   
   
	  .suggestBoxEx {
			width: 100%;
			border: none;
			padding-left: 5px;
			font-size: 100%;
			height: 27px;
			box-sizing: border-box;
			background: none repeat scroll 0 0 transparent;
	  }
	  
	  
	  .suggestBoxEx:focus, .suggestBoxEx:focus{
		    outline: none;
		}

	  .suggestBoxExButton {
			width: 29px;
			height: 29px;
			float: right;
			border: 0px;
			background: transparent none;
			padding: 0px;
			font-family: arial, helvetica, sans-serif;
			font-size: 14px;
			color: black;
	  }
	      
	</ui:style>
	
	<g:HorizontalPanel ui:field="holder" >
	
	   <g:cell width="100%">
		 <g:SuggestBox ui:field="suggestBox" styleName="{style.suggestBoxEx}"/>
	   </g:cell>
	   <g:cell width="32">
	     <m:ArrowButton ui:field="button" styleName="{style.suggestBoxExButton}"/>
	   </g:cell>
	   
	</g:HorizontalPanel>
	
</ui:UiBinder> 